// /next-static/ui/Headline.tsx
import type { FC, ReactNode } from 'react'
import { cn } from '@/lib/utils' // if you have classnames helper; otherwise use template literals

type HeadingLevel = 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'

interface HeadlineProps {
  /** Which heading level to render (default: h2) */
  as?: HeadingLevel
  /** The heading text â€“ should be plain text or simple inline content */
  children: string
  /** Icon to place before the text (like an emoji) */
  icon?: ReactNode
  /** Optional extra className passed to the heading element */
  className?: string
}

const Headline: FC<HeadlineProps> = ({
  as: Tag = 'h2',
  children,
  icon,
  className = '',
}) => {
  return (
    <Tag className={cn('inline-flex items-baseline gap-2.5', className)}>
      {icon && (
        <span
          className="inline-flex shrink-0 items-center justify-center text-current"
          aria-hidden="true"
        >
          {icon}
        </span>
      )}
      {children}
    </Tag>
  )
}

export {Headline}